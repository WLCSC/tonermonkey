<h1>Item</h1>
<% if !@item.safe? %>
	<div class="alert alert-error">This is running dangerously low!</div>
<% elsif @item.need? %>
	<div class="alert">You could probably use some more of this.</div>
<% end %>
<table class="table"><tr>
		<td>
<p>
  <b>Name</b><br>
  <%= @item.name %>
</p>
</td><td>
<p>
  <b>Short</b><br>
  <%= @item.short %>
</p>
</td><td>
<p>
  <b>Barcode</b><br>
  <%= @item.barcode %>
</p>
</td></tr>
<tr>
	<td>
	<p><b>Target Count</b><br/>
	<%= @item.target || 0 %>
</td>
<td>
	<p><b>Current Count</b><br/>
	<%= @item.count_all || 0 %>
<td>
	<p><b>Unsafe Count</b><br/>
	<%= @item.unsafe || 0 %>
</td>
</tr>
</table>

<table class="table table-striped">
	<tr>
		<th>Store</th>
		<th>Count</th>
	</tr>
	<% @item.inventories.each do |i| %>
		<tr>
			<td><%= link_to i.store.name, i.store %></td>
			<td><%= i.count %></td>
		</tr>
	<% end %>
</table>
<div class="form-actions">
  <%= link_to 'Back', items_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_item_path(@item), :class => 'btn' %>
  <%= link_to 'Delete', item_path(@item), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
