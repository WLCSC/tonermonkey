<h1>Items</h1>
<table class="table table-striped table-condensed">
	<thead><tr>
			<th width="15%" style="text-align: right;">Order Count</th>
			<th>Name</th>
			<th>Short</th>
			<th>Current Count</th>
	</tr></thead>
	<tbody>
		<% Item.all.each do |item| %>
			<% if item.target - item.count_all > 0 %>
				<tr style="background-color: <%= cycle('auto',"#ccc") %>;">
					<td style="text-align: right;" width="15%"><%= (item.target - item.count_all) %></td>
					<td><%= link_to item.name, item_path(item) %></td>
					<td><%= item.short %></td>
					<td><%= item.count_all %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>


