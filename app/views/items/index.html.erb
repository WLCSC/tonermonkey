<h1>Items</h1>
<table class="table table-striped">
  <thead>
    <tr>
	    <th>Name</th>
	    <th>Short</th>
	    <th>Count</th>
	    <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
	      <td><%= link_to item.name, item_path(item) %></td>
	      <td><%= item.short %></td>
	      <td><%= item.count_all %></td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_item_path, :class => 'btn btn-primary' %>
