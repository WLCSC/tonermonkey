<%= form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :short, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :short, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :barcode, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :barcode, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :target, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :target, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :unsafe, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :unsafe, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', items_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
